	<link rel="stylesheet" type="text/css" media="screen" href="{$baseUri}css/style.css">

	<title>Fifteen - Nette Framework example</title>

	<script src="{$baseUri}js/nette.js" type="text/javascript"></script>
	<script src="{$baseUri}js/fifteen.js" type="text/javascript"></script>
	<script src="{$baseUri}js/jquery.js" type="text/javascript"></script>
</head>

<body>
	<h1>Fifteen example &ndash; {snippet round <span>}round #{$fifteen->round + 1}{/snippet}</h1>

	{snippet flash}{if isset($flash)}<h2>{$flash}</h2>{/if}{/snippet}

	<p><a href="{$fifteen->link('shuffle')}" onclick="{$fifteen->ajaxLink(NULL)}">Shuffle!</a></p>

	<div class="fifteen">
	@{? $fifteen->render() }
	</div>

	<img id="spinner" src="images/spinner.gif" alt="Wait please..." width="14" height="14">
</body>
</html>
